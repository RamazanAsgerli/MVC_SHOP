@using Core.Models

@model List<Person>
@{
    int count = 0;
}

<h1>

    Persons
    <a asp-action="Create" class="btn btn-dark">Create</a>

</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">FullName</th>
            <th scope="col">Title</th>
            <th scope="col">Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
            count++;
            <tr>
            <th scope="row">@count</th>
            <td>@item.FullName</td>
            <td>@item.Title</td>
            <td>
                <div style="width:100px">
                <img src="~/Upload/Person/@item.ImgUrl"  width="100%"/>
                    </div>
            </td>
            <td>
                    <a class="btn btn-danger" asp-action="Update" asp-controller="Person" asp-route-id=@item.Id>Update</a>
                    <a class="btn btn-primary" asp-action="Delete" asp-controller="Person" asp-route-id=@item.Id>Delete</a>

            </td>
            
            
        </tr>
        }
       
    </tbody>
</table>
